---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'

import { Image } from 'astro:assets'
import ava from '../assets/ava.png'
import experiences from '../data/experiences.json'

const languages = ['English', 'Russian', 'Uzbek', 'Tajik']
const frontend = [
	'TypeScript',
	'JavaScript',
	'React',
	'Next.js',
	'Astro',
	'Qwik',
	'Redux',
	'Zustand',
	'Jotai',
	'Effector',
	'Reatom',
	'ReactQuery',
	'SWR',
	'ApolloClient',
	'RTK Query',
	'HTML',
	'CSS',
	'SCSS',
	'Tailwind',
	'MUI',
	'AntDesign',
	'Shadcn',
	'Daisyui',
	'REST API',
	'Websocket',
	'Microservices',
	'Micro-Frontend',
	'Monorepo',
	'Polyrepo',
	'FSD',
	'Rxjs',
	'Observables',
	'SEO Optimization',
	'Web Workers',
	'Webpack',
	'Rollup',
	'Parcel'
]
const backend = ['Node.js', 'Express.js', 'Prisma', 'Database', 'SQL', 'Postgres']
const others = [
	'Git',
	'Github',
	'Gitlab CI/CD',
	'tRPC',
	'Jest',
	'Vitest',
	'Principles',
	'Data Structures & Algorithms',
	'Swagger',
	'Postman',
	'Firebase'
]

const EXPERIENCE_YEAR = new Date().getFullYear() - 2021
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-auto flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={ava}
				alt='profile photo'
				class='h-28 w-auto rounded-full'
				fetchpriority='high'
				loading='eager'
				format='avif'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Mironshokh Shamsiev</h1>

				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label
						title='Telegram'
						as='a'
						href='https://t.me/invuln'
						target='_blank'
						aria-label='Write a message in Telegram'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 24 24'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								d='M14.536 21.686a.5.5 0 0 0 .937-.024l6.5-19a.496.496 0 0 0-.635-.635l-19 6.5a.5.5 0 0 0-.024.937l7.93 3.18a2 2 0 0 1 1.112 1.11z'
							></path><path d='m21.854 2.147-10.94 10.939'></path></svg
						>
					</Label>
					<Label title='Tashkent/Uzbekistan (GMT+5)'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/mironshokh-shamsiev-300b27222/'
						target='_blank'
						aria-label='Connect on Linkedin'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				Frontend Developer with {EXPERIENCE_YEAR}+ years of experience building high-performance web
				applications, specializing in API integration, clean code practices, and optimizing user
				experiences. Adept at collaborating with cross-functional teams to deliver scalable,
				maintainable solutions, and passionate about efficient, well-structured development.
			</p>
		</Section>

		<Section title='Experience'>
			{
				experiences.map(({ heading, subheading, altText, date, items, imagePath }, idx) => {
					return (
						<Card
							key={idx}
							heading={heading}
							subheading={subheading}
							date={date}
							imagePath={imagePath}
							altText={altText}
							imageClass='h-12 w-auto md:-left-16'
						>
							<ul class='ml-4 list-disc text-muted-foreground'>
								{items.map((item, idx) => {
									return (
										<Fragment key={idx}>
											<li>{item}</li>
										</Fragment>
									)
								})}
							</ul>
						</Card>
					)
				})
			}
		</Section>

		<Section title='Education'>
			<Card
				heading='Mathematics and Computer science'
				subheading='Pedagogical Institute of Bukhara State University'
				date='2021 - 2026'
				imagePath='/src/assets/education.svg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://www.google.com'
					heading='Consectetur'
					subheading='Lorem ipsum dolor sit amet consectetur adipisicing elit.'
					imagePath='/src/assets/coming-soon.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Coming soon...'
					subheading=''
					imagePath='/src/assets/coming-soon.png'
					altText='Lorem, ipsum dolor sit'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>
	</div>
</PageLayout>
